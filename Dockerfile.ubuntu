FROM ubuntu:24.04

# Set non-interactive frontend to suppress tzdata prompts during install
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y --no-install-recommends \
    iproute2 \
    iputils-ping \
    tcpdump \
    sudo \
    net-tools \
    dnsutils \
    curl \
    vim \
    bash-completion \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

CMD ["tail", "-f", "/dev/null"]


